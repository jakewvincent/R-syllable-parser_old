internal_DDs[3,] <- c("English_3", "Exp. 3 (Trans. obj.)", 0.62)
internal_DDs[4,] <- c("English_4", "Exp. 4 (Predicate nominal)", 0.28)
internal_DDs[5,] <- c("English_5", "Exp. 3 (Existential)", 0.26)
internal_DDs[6,] <- c("English_6", "Exp. 3 (Predicate nominal)", 0.16)
internal_DDs[7,] <- c("English_7", "Exp. 4 (Existential)", 0.08)

as.data.frame(internal_DDs) -> internal_DDs

colnames(internal_DDs) <- c("Language", "Source", "DD")

internal_DDs$DD %>% as.character %>% as.numeric -> internal_DDs$DD

