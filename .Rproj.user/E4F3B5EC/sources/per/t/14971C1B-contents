ggplot(internal_DDs,
       aes(x = Language,
           y = DD)) +
  geom_col(show.legend = FALSE,
           fill = c("gray70",
                    "gray70",
                    "gray70",
                    "black",
                    "gray70",
                    "gray70",
                    "black")) +
  scale_x_discrete(labels = NULL) +
  theme_minimal() +
  theme(panel.grid.minor = element_blank(),
        legend.title = element_text(size = 12), # text of legend title
        legend.text = element_text(size = 12), # text of labels in the legend
        axis.text = element_text(size = 12), # column labels
        axis.title.x = element_text(size = 15, # text of x-axis title (here, "Dependency length")
                                    margin = margin(0.5, NA, 0.5, NA, "cm")),
        axis.title.y = element_text(size = 15, # text of y-axis title (here, "Mean rating")
                                    margin = margin(NA, 0.5, NA, 0.5, "cm")),
        strip.text.x = element_text(size = 15), # text of panels (here, context levels),
        axis.text.x = element_text(angle = 45,
                                   vjust = 1.1,
                                   hjust = 1.1)) +
  geom_text(aes(x = c(1:7),
                y = c(0.62,
                      0.48,
                      0.44,
                      0.51,
                      0.43,
                      0.39,
                      0.25),
                label = Source),
            color = c("black",
                      "black",
                      "black",
                      "black",
                      "black",
                      "black",
                      "black"),
            angle = 90) -> DD_internal_plot

print(DD_internal_plot)